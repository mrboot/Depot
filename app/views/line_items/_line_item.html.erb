<% if line_item == @current_item %>
	<tr class="line_item" id="current_item">
<% else %>
	<tr class="line_item">
<% end %>
	<td><%= line_item.quantity %> &times;</td>
	<td><%= line_item.product.title %></td>
	<td class="item_price"><%= number_to_currency(line_item.total_price, :unit => "&pound;") %></td>
	<td><%= button_to "+", increase_line_item_path(line_item), method: :post, remote:true %></td>		
	<td><%= button_to "-", decrease_line_item_path(line_item), method: :post, remote:true %></td>		
	<td><%= button_to "delete", line_item, method: :delete, confirm: "Are you sure", remote:true %></td>		
</tr>